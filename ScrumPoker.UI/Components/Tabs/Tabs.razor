@namespace ScrumPoker.UI.Components.Tabs
@inherits TablerBaseComponent

<div class="card">
    <div class="card-body">
        <CascadingValue Value="@this">
            <ul class="nav nav-tabs">
                @ChildContent
            </ul>
        </CascadingValue>

        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active show">
                    <div> @ActiveTab?.ChildContent</div>
                </div>
            </div>
        </div>
    </div>
</div>